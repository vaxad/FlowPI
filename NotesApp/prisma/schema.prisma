generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("BACKEND_DATABASE_URL")
}

model user {
 id  String  @id @default(auto()) @map("_id") @db.ObjectId
  email String@unique
  username String
  password String
  note note[]
  noteId String @db.ObjectId
}

model note {
 id  String  @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  createdAt DateTime
  user user @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

